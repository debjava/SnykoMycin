<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <!-- Unique identifier of the plugin. It should be FQN. It cannot be changed between the plugin versions. -->
    <id>com.ddlab.rnd.SnykoMycin</id>

    <!-- Public plugin name should be written in Title Case.
         Guidelines: https://plugins.jetbrains.com/docs/marketplace/best-practices-for-listing.html#plugin-name -->
    <name>SnykoMycin</name>

    <!-- A displayed Vendor name or Organization ID displayed on the Plugins Page. -->
    <vendor url="https://www.ddlabsinc.com">DDLABS Inc.</vendor>

    <!-- Description of the plugin displayed on the Plugin Page and IDE Plugin Manager.
         Guidelines: https://plugins.jetbrains.com/docs/marketplace/best-practices-for-listing.html#plugin-description -->
    <description>
        <![CDATA[
        SnykoMicin â€“ A Tornado Creation Powered by Passion<br>
        <em>most HTML tags may be used</em>
    ]]></description>

    <!-- Product and plugin compatibility requirements.
         Read more: https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html -->
    <depends>com.intellij.modules.platform</depends>


    <extensions defaultExtensionNs="com.intellij">

        <!-- SynkoMycin Tool Window for Synk Issues -->
        <toolWindow id="Snyk Issues" anchor="right" icon="/icons/snyk-1-16.png"
                    factoryClass="com.ddlab.rnd.tool.view.SnykIssuesToolWindowFactory"/>

        <!-- SynkoMycin Setting Page for the Plugin -->
        <applicationService serviceImplementation="com.ddlab.rnd.setting.SynkoMycinSettings"/>
        <applicationConfigurable
                id="com.example.settings"
                displayName="SnykoMycin Setting"
                instance="com.ddlab.rnd.setting.SnykoMycinPluginConfigurable"/>

    </extensions>
    <actions>
        <group id="SynkoMycinPlugin.SubMenu" text="SnykoMycin"
               popup="true" icon="/icons/double-arrow-16.png">
            <action id="SnykoMycin.DisplaySnykAction"
                    class="com.ddlab.rnd.action.DisplaySnykDataAction"
                    text="Show Snyk Data Action"
                    icon="/icons/snyk-1-16.png"/>
            <action id="SnykoMycin.UpdateBuildAction"
                    class="com.ddlab.rnd.action.UpdateBuildAction"
                    text="Update Dependencies"
                    icon="/icons/update-1-16.png"/>
            <!--<add-to-group group-id="ProjectViewPopupMenu" anchor="last"/>-->
            <add-to-group group-id="EditorPopupMenu" anchor="last"/>
        </group>
    </actions>
</idea-plugin>